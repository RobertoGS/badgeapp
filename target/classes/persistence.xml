<?xml version="1.0" encoding="UTF-8"?>
<!-- la configuración del bean entityManager requerirá la creación de un 
	fichero donde se defina la unidad de persistencia. Por defecto, este fichero 
	se deberá llamar 'persistence.xml' y deberá crearse bajo el directorio 'META-INF' 
	dentro del directorio de recursos de la aplicación 'src/main/resources' -->

<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
	http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
	version="1.0">

	<persistence-unit name="badgeappPU" transaction-type="RESOURCE_LOCAL">

		
	</persistence-unit>
</persistence>